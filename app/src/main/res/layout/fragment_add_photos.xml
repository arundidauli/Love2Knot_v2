<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_arrow"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add photos"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="24sp"
        android:textStyle="bold"
        style="@style/MyFontStyle"
        android:textColor="@color/black"
        android:layout_below="@+id/back_arrow"/>

    <LinearLayout
        android:id="@+id/ll_photo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image1"
            android:layout_width="@dimen/image_height_width"
            android:layout_height="@dimen/image_height_width"
            android:src="@mipmap/profile"
            app:civ_border_width="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:civ_border_color="#66A877FF"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image2"
            android:layout_width="@dimen/image_height_width"
            android:layout_height="@dimen/image_height_width"
            android:src="@mipmap/profile"
            app:civ_border_width="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:civ_border_color="#66A877FF"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image3"
            android:layout_width="@dimen/image_height_width"
            android:layout_height="@dimen/image_height_width"
            android:src="@mipmap/profile"
            app:civ_border_width="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:civ_border_color="#66A877FF"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_photo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_photo1"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image4"
            android:layout_width="@dimen/image_height_width"
            android:layout_height="@dimen/image_height_width"
            android:src="@mipmap/profile"
            app:civ_border_width="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:civ_border_color="#66A877FF"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image5"
            android:layout_width="@dimen/image_height_width"
            android:layout_height="@dimen/image_height_width"
            android:src="@mipmap/profile"
            app:civ_border_width="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:civ_border_color="#66A877FF"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image6"
            android:layout_width="@dimen/image_height_width"
            android:layout_height="@dimen/image_height_width"
            android:src="@mipmap/profile"
            app:civ_border_width="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:civ_border_color="#66A877FF"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To increase your visibility 5X more,add 3 or 4 recent high resolution photos following our guidelines."
        android:padding="8dp"
        android:lineSpacingExtra="4sp"
        android:textAlignment="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="16dp"
        style="@style/MyFontStyle"
        android:textColor="@color/black"
        android:layout_below="@+id/ll_photo2"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Continue"
        style="@style/MyFontStyle"
        android:layout_margin="16dp"
        android:textAllCaps="false"
        android:padding="@dimen/padding_8dp"
        android:textSize="18sp"
        android:background="@drawable/capsule_shape" />

</RelativeLayout>